<% if not current_user %>

<div class = "container">

<h1>Sign in to RamenRate</h1>
<hr class = "featurette">
<p id="notice"><%= notice %></p>
<%= form_for(:session, url: login_path) do |f| %>

<div class = "form-row">

<div class = "col">
<%= f.label :email%>
<%= f.email_field :email, :class => "form-control"%>
</div>

<div class = "col">
<%= f.label :password %>
<%= f.password_field:password, :class => "form-control" %>
</div>


<%= f.submit "Submit",class: "btn btn-primary" %>
<% end %>

</div>

<hr class = "hr-featurette">

<p>New user? <%= link_to "Create an account here!",new_user_path %></p>

</div>
<% else %>
You are already logged in.
<% end %>
