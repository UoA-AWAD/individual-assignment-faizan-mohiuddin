<p id="notice"><%= notice %></p>

<h1>Ramen</h1>

<div class = "form-inline">
<%= form_tag(ramen_path, method: :get) do %>
<%= text_field_tag :term, params[:term], placeholder: "search for variety..", class: "form-control" %>
<%= button_tag "Search", :class => 'btn btn-info',:name => nil%>
<% end %>
</div>

<hr class="featurette">

<table class = "table">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Variety</th>
      <th>Style</th>
      <th>Country</th>
      <th>Stars</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% if current_user.isadmin? %>
  <a href="/ramen/new" class="btn btn-primary">Add New Ramen</a>
  <% end %>

  <tbody>
    <% @ramen.each do |raman| %>
      <tr>
        <td><%= raman.Brand %></td>
        <td><%= raman.Variety %></td>
        <td><%= raman.Style %></td>
        <td><%= raman.Country %></td>
        <td><%= raman.Stars %></td>
        <% if current_user.isadmin? %>
        <td><%= link_to 'Show', raman %></td>
        <td><%= link_to 'Edit', edit_raman_path(raman) %></td>
        <td><%= link_to 'Destroy', raman, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% if not current_user.isadmin? %>
        <td><a href = "#">Add to Cart</a></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
