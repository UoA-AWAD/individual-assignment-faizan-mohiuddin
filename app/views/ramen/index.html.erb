<p id="notice"><%= notice %></p>

<h1>Ramen</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Variety</th>
      <th>Style</th>
      <th>Country</th>
      <th>Stars</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ramen.each do |raman| %>
      <tr>
        <td><%= raman.Brand %></td>
        <td><%= raman.Variety %></td>
        <td><%= raman.Style %></td>
        <td><%= raman.Country %></td>
        <td><%= raman.Stars %></td>
        <% if current_user.isadmin? %>
        <td><%= link_to 'Show', raman %></td>
        <td><%= link_to 'Edit', edit_raman_path(raman) %></td>
        <td><%= link_to 'Destroy', raman, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

