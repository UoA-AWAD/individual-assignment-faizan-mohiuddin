
<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class = "form-group row">
    <%= form.label:name, 'Name', :class => "col-sm-2 col-form-label"%>
    <div class = "col-sm-10">
    <%= form.text_field:name, :class => "form-control" %>
    </div>
</div>

<div class = "form-group row">
    <%= form.label:email, 'E-mail', :class => "col-sm-2 col-form-label" %>
    <div class = "col-sm-10">
    <%= form.text_field:email, :class => "form-control" %>
  </div>
</div>

<div class = "form-group row">
    <%= form.label:password, 'Password', :class => "col-sm-2 col-form-label" %>
    <div class = "col-sm-10">
    <%= form.password_field:password, :class => "form-control" %>
  </div>
</div>

<div class = "form-group row">
    <%= form.label:password_confirmation, "Confirm Password", :class => "col-sm-2 col-form-label" %>
    <div class = "col-sm-10">
    <%= form.password_field:password_confirmation, :class => "form-control" %>
  </div>
</div>

<div class = "form-group row">
    <%= form.label:isadmin, "Make account admin?", :class => "col-sm-2 col-form-label" %>
    <div class = "col-sm-10">
    <%= form.check_box :isadmin, :type => "checkbox", :class => "form-check-input" %>
  </div>
</div>

<div class="actions">
  <%= form.submit 'Create', :class => 'btn btn-success' %>
</div>

<hr class = "featurette">
<div class = "alert alert-warning">
  <b>Please note</b> you must log in to your new account after creating it.
</div>



<% end %>
